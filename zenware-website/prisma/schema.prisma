generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(cuid())
  email       String       @unique
  name        String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  contacts    Contact[]
  newsletters Newsletter[]

  @@map("users")
}

model Contact {
  id          String   @id @default(cuid())
  name        String
  email       String
  company     String?
  phone       String?
  projectType String?
  budgetRange String?
  timeline    String?
  message     String
  createdAt   DateTime @default(now())
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])

  @@map("contacts")
}

model Newsletter {
  id         String   @id @default(cuid())
  email      String   @unique
  name       String?
  subscribed Boolean  @default(true)
  createdAt  DateTime @default(now())
  userId     String?
  user       User?    @relation(fields: [userId], references: [id])

  @@map("newsletters")
}

model Project {
  id              String   @id @default(cuid())
  name            String
  slug            String   @unique
  tagline         String?
  description     String
  longDescription String?
  image           String?
  status          String   @default("development")
  category        String
  tags            String[]
  techStack       String[]
  demoUrl         String?
  githubUrl       String?
  featured        Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("projects")
}

model BlogPost {
  id          String    @id @default(cuid())
  title       String
  slug        String    @unique
  excerpt     String?
  content     String
  image       String?
  published   Boolean   @default(false)
  category    String
  tags        String[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  publishedAt DateTime?

  @@map("blog_posts")
}

model Service {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String
  features    String[]
  category    String
  price       String?
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("services")
}

model Assessment {
  id                    String    @id @default(cuid())
  tier                  String    // mini | medium | indepth
  status                String    @default("in_progress") // in_progress | completed | abandoned

  // Contact Info
  name                  String?
  email                 String?
  company               String?
  phone                 String?

  // Company Details (for AI strategy customization)
  companySize           String?   // e.g., "1-10", "11-50", "51-200", "201-500", "500+"
  industry              String?
  yearlyRevenue         String?   // e.g., "<100k", "100k-500k", "1m-5m", "50m+"
  companyDescription    String?   @db.Text
  customHelpNeeded      String?   @db.Text  // Custom areas where they need help

  // DREAM Scores (1-10 scale)
  demandScore           Float?
  revenueScore          Float?
  engineScore           Float?
  adminScore            Float?
  marketingScore        Float?
  overallScore          Float?

  // Raw Responses (JSON object with question IDs as keys)
  responses             Json?

  // AI-Generated Implementation Strategy
  aiStrategy            String?   @db.Text
  aiStrategyGeneratedAt DateTime?

  // Timestamps
  startedAt             DateTime  @default(now())
  completedAt           DateTime?

  // Flags
  pdfRequested          Boolean   @default(false)
  consultationRequested Boolean   @default(false)

  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("assessments")
}
